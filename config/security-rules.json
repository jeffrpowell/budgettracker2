{
  "rules": {
    ".read": "auth.uid !== null",
    ".write": "auth.uid !== null",
	"budgetDate": {".validate": "newData.isNumber()"},
    "budgetTotals": {
      "$date": {
        "categories": {
          "$category_id": {
            ".validate": "root.child('categories/'+$category_id).exists() && newData.hasChildren(['name'])",
            "name": {".validate": "newData.isString()"},
            "envelopes": {
              "$envelope_id": {
                ".validate": "root.child('categories/'+$category_id+'/envelopes/'+$envelope_id).exists() && newData.hasChildren(['name', 'allocation'])",
                "name": {".validate": "newData.isString()"},
                "allocation": {".validate": "newData.isNumber()"},
                "usage": {".validate": "newData.isNumber()"}
              }
            }
          }
        },
		"income": {".validate": "newData.isNumber()"}
      }
    },
    "categories": {
      "$category_id": {
        ".validate": "newData.hasChildren(['name'])",
        "name": {".validate": "newData.isString()"},
		"key": {".validate": "newData.val() === $category_id"},
        "envelopes": {
          "$envelope_id": {
            ".validate": "newData.hasChildren(['name'])",
            "name": {".validate": "newData.isString()"},
			"key": {".validate": "newData.val() === $envelope_id"}
          }
        }
      }
    },
  	"filterDate": {
  	  ".validate": "newData.isNumber() && newData.val() > 201401 && newData.val() < 202012"
    },
    "$other": { ".validate": false }
  }
}